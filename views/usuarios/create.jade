extends ../layout

block content
    h1 Cadastro de Usu√°rios
    hr
    br
    if messages.erro
        div(class="alert alert-danger")
            each msg in messages.erro
                b #{msg}
                br
        br
    form(method="POST", action="/usuarios/create", role="form")
        div(class="form-group")
            label Nome
            input(type="text", class="form-control", name="nome", placeholder="nome completo", autofocus)
        div(class="form-group")
            label E-mail
            input(type="email", class="form-control", name="email", placeholder="dominio@servidor.com")
        div(class="form-group")
            label Site
            input(type="text", class="form-control", name="site", value="http://")
        div(class="form-group")
            label Senha
            input(type="password", class="form-control", name="password", placeholder="informar senha")
        div(class="form-group")
            label Confirmar Senha
            input(type="password", class="form-control", name="password_confirmar", placeholder="repita a senha")
        button(type="submit", class="btn btn-success") Salvar